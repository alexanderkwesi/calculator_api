{
  injectChanges: false,
  files: [
    'src/**/*.html',
    'src/**/*.css',
    'src/**/*.ts',
    'src/**/*.tsx',
    'src/**/*.js',
    'src/images/**/*'
  ],
  watchOptions: {
    ignored: 'node_modules'
  },
  proxy: 'localhost:3000',
  watchEvents: [
    'change', 'add', 'addDir', 'unlink', 'unlinkDir'
  ],
  port: 3001,
  open: true,
  notify: false,
  ui: {
    port: 3002
  },
  reloadOnRestart: true,
  logLevel: 'info',
  logPrefix: 'BS',
  logConnections: true,
  logFileChanges: true,
  logSnippet: true
}
